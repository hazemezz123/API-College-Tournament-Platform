{
  "name": "student-tournament-platform",
  "version": "1.0.0",
  "description": "A comprehensive web platform for hosting and participating in programming quizzes and tournaments",
  "main": "index.js",
  "scripts": {
    "build": "npx tailwindcss -i ./src/styles.css -o ./public/build.css --watch",
    "build:prod": "npx tailwindcss -i ./src/styles.css -o ./public/build.css --minify",
    "dev": "concurrently \"npm run build\" \"php -S localhost:8000 -t public\""
  },
  "keywords": [
    "quiz",
    "tournament",
    "programming",
    "education",
    "web-platform"
  ],
  "author": "API College",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14"
  },
  "dependencies": {
    "bootstrap": "^5.3.3"
  }
}
